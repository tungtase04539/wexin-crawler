# WeWe-RSS Configuration
WEWE_RSS_URL=http://localhost:4000
WEWE_RSS_AUTH_CODE=

# Database Configuration
DATABASE_URL=sqlite:///data/articles.db
# For PostgreSQL: postgresql://user:password@localhost:5432/wewe_articles
# For MySQL: mysql://user:password@localhost:3306/wewe_articles

# Sync Configuration
SYNC_INTERVAL_MINUTES=30
MAX_ARTICLES_PER_SYNC=100
ENABLE_AUTO_SYNC=true

# Content Processing
DOWNLOAD_IMAGES=true
IMAGE_STORAGE_PATH=data/images
ENABLE_CONTENT_CLEANING=true
GENERATE_SUMMARIES=false

# Export Configuration
EXPORT_PATH=exports
DEFAULT_EXPORT_FORMAT=json

# Web Dashboard
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Cache
CACHE_TTL_SECONDS=3600
ENABLE_CACHE=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
